.user-new-registration
  = render partial: "shared/new-header"
  %main.single-main
    %section.l-single-container
      %h2.l-single-head
        会員情報入力

      .l-single-inner
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .l-single-content
          .form-group
            = f.label :nickname do
              ニックネーム
            %span.form-require
              必須
            = f.text_field :nickname, autoforcus: true, placeholder: "例) メルカリ太郎", class: "input-default"
          .form-group
            = f.label :email do
              メールアドレス
            %span.form-require
              必須
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default"
          .form-group
            = f.label :password do
              パスワード
            %span.form-require
              必須
            = f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "input-default"
          .form-group
            = f.label :password do
              パスワード(確認)
            %span.form-require
              必須
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: "input-default"
          .form-group
            = f.submit "次へ進む", class: "form-group__btn-default form-group__btn-red "

  = render partial: "shared/new-footer"


