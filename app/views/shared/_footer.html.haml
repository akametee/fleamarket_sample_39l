%aside.app-banner
  .app-banner__main
    .app-banner__inner
      %h2 スマホで簡単フリマアプリ
      %p 今すぐ無料ダウンロード！
      .app-banner__icon
        = image_tag("mercari_icon.png", class:"app-banner__logo")
        %ul.app-banner__store
          %li
            = link_to "https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8" do
              = image_tag("app-store.svg", class:"app-store")
          %li
            = link_to "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja" do
              = image_tag("google-play.svg", class:"google-play")
    = image_tag("banner-img.jpg", class:"app-banner__image")
